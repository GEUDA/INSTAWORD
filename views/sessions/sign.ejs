<!DOCTYPE html>

<div class="container">
  <h1>AGASTYA</h1>
  <h2>SIGN UP</h2>
  <form id="form_signup" action="/sessions/create" method="POST">
    <p>
      <label for="input_email_address">Email Address</label>
      <input id="input_email_address" name="email_address" type="text" size="30" placeholder="foo@example.com" required="required"></input>
    </p>
    <p>
      <label for="input_password">Password</label>
      <input id="input_password" name="password" type="password" size="30" placeholder="Password" required="required"></input>
    </p>
    <p>
      <label for="input_password_again">Password (again)</label>
      <input id="input_password_again" name="password_again" type="password" size="30" placeholder="Password" required="required"></input>
    </p>
    <p>
      <input id="input_check" value="CHECK" type="button"></input>
      <input id="input_submit" value="SIGN UP" type="submit" disabled></input>
    </p>
  </form>
  <p class="error_message"><%= message %></p>
</div>

<script src="/javascripts/airbrain-instaword-sign.js"></script>
